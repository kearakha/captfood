{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    // ⬇️ FIX ALIAS
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    // ⬇️ FIX DEPRECATION WARNING
    "ignoreDeprecations": "6.0",

    "plugins": [
      { "name": "next" }
    ]
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx"
  ],

  "exclude": ["node_modules"]
}
